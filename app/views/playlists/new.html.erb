<div class="card">
  <div class="card-body">
<%= form_for @playlist, url: profile_playlists_path(current_profile) do |f| %>
  <% if  @playlist&.errors&.any? %>
    <ul class="alert alert-danger">
      <% @playlist&.errors.full_messages.each do |message| %>
        <li> <%= message %></li>
      <%end %>
    </ul>
  <%end %>
  <br>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>
  <%= f.label :public %>
  <%= f.check_box :public %>
  <br>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <br>
  <%= f.submit 'Create' %>
<% end %>
</div>
</div>
