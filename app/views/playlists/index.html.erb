<div class="card">
  <div class="card-body">
<%= link_to 'Add new Playlist', new_profile_playlist_path(current_profile), class: 'btn btn-sm btn-primary' %>
<table class="table">
  <tr>
    <th> Name </th>
    <th> Description </th>
    <th> Songs</th>
    <th>Actions</th>
  </tr>

  <% @playlists.each do |playlist| %>
    <tr>
      <td> <%= playlist.name.truncate(50) %></td>
      <td> <%= playlist.description.truncate(50) %></td>
      <td> <%= playlist.songs.count %></td>
      <td>
        <%= link_to 'Show', profile_playlist_path(current_profile, playlist), 'data-turbolinks': false, class: 'btn btn-sm btn-primary mr-2' %>
        <%= link_to 'Edit', edit_profile_playlist_path(current_profile, playlist), class: 'btn btn-sm btn-primary mr-2' %>
        <%= link_to 'Delete', profile_playlist_path(current_profile, playlist), method: :delete, class: 'btn btn-sm btn-danger' %>
      </td>
    </tr>
  <% end %>

</table>

  </div></div>